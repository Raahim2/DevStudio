
{
  "name": "devstudio",
  "version": "2.2.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:next:dev\" \"npm:electron:dev\" --kill-others",
    "next:dev": "next dev --turbopack",
    "electron:dev": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run next:build && npm run electron:build",
    "next:build": "next build",
    "electron:build": "electron-builder",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^21.1.1",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "mime-types": "^3.0.1",
    "next": "15.2.4",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^9.2.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.27.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.raahim2.devstudio",
    "productName": "DevStudio",
    "copyright": "Copyright Â© 2025 DevStudio",
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist/installers"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}

