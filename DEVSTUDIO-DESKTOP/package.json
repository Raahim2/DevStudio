{
  "name": "devstudio",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:next:dev\" \"npm:electron:dev\" --kill-others",
    "next:dev": "next dev --turbopack",
    "electron:dev": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run next:build && npm run electron:build",
    "next:build": "next build", 
    "electron:build": "electron-builder",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.0.1",
    "next": "15.2.4",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.raahim2.devstudio",
    "productName": "DevStudio",
    "files": [
      "electron/**/*",
      "out/**/*", 
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist/installers"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png" 
    },
    "linux": {
        "icon": "assets/icon.png" 
    }
  }
}